var pellets := []

var world_offset := Vector2(-720, -370) # change if needed

func _ready():
	spawn_pellets()

func spawn_pellets():
	for y in maze.size():
		for x in maze[y].size():
			if maze[y][x] == 1:
				var pellet = pellet_scene.instantiate()
				pellet.position = Vector2(x, y) * tile_size + Vector2(tile_size/2, tile_size/2) + world_offset
				add_child(pellet)
				pellets.append(pellet)

func pellet_eaten(pellet):
	pellets.erase(pellet)
	if pellets.size() == 0:
		game_over()

func game_over():
	get_tree().paused = true
	print("All pellets eaten! Game over!")
